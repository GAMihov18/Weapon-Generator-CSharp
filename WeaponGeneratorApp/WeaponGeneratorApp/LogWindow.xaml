<Window x:Class="WeaponGeneratorApp.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeaponGeneratorApp"
        mc:Ignorable="d"
        Title="LogWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MinWidth="600"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ListView x:Name="logView" Width="600"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0">
            
        </ListView>
        <StackPanel Grid.Column="1" VerticalAlignment="Bottom" Margin="0,0,0,20">
            <Button  Content="Clear Logs" Click="Clear"/>
        </StackPanel>
    </Grid>
</Window>
